{
  "version": "0.0.0-development",
  "description": "A library that converts HTML to PDF using Headless Chrome (puppeteer)",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@mbrandau/htmlpdf",
  "repository": {
    "type": "git",
    "url": "https://github.com/mbrandau/htmlpdf.git"
  },
  "keywords": [
    "html",
    "pdf",
    "converter"
  ],
  "author": "Maximilian Brandau",
  "bugs": {
    "url": "https://github.com/mbrandau/htmlpdf/issues"
  },
  "homepage": "https://github.com/mbrandau/htmlpdf#readme",
  "module": "dist/htmlpdf.esm.js",
  "size-limit": [
    {
      "path": "dist/htmlpdf.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/htmlpdf.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/lodash.defaults": "4.2.7",
    "husky": "^8.0.2",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "semantic-release": "^19.0.5"
  },
  "dependencies": {
    "lodash.defaults": "4.2.0",
    "puppeteer": "19.3.0"
  }
}
